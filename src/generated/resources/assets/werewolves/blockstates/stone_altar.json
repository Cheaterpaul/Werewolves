{
  "multipart": [
    {
      "apply": {
        "model": "werewolves:block/stone_altar"
      }
    },
    {
      "when": {
        "lit": "true",
        "soulfire": "false"
      },
      "apply": {
        "model": "werewolves:block/stone_altar_fire"
      }
    },
    {
      "when": {
        "lit": "true",
        "soulfire": "true"
      },
      "apply": {
        "model": "werewolves:block/stone_altar_fire_soul"
      }
    }
  ]
}